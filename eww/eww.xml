<eww>

  <definitions>
    <def name="clock">
      <box>
        {{ time }}
      </box>
    </def>
  </definitions>

  <variables>
    <script-var name="time">
      date "+%T"
    </script-var>
  </variables>

  <windows>
    <window name="dash">
      <geometry anchor="top left" x="50%" y="50%" width="25%" height="20px"/>
      <reserve side="left" distance="50px"/>
      <widget>
	<clock/>
      </widget>
    </window>
  </windows>

</eww>


