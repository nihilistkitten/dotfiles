<eww>

  <definitions>
    <def name="clock">
      <box>
        {{ time }}
      </box>
    </def>
  </definitions>

  <variables>
    <script-var name="time" interval = "1s">
      date "+%T"
    </script-var>
  </variables>

  <windows>
    <window name="dash">
      <geometry anchor="top left" x="43%" y="50%" width="14%" height="20px"/>
      <reserve side="left" distance="50px"/>
      <widget>
	<clock/>
      </widget>
    </window>

    <window name="clock" class="clock">
      <geometry anchor="top left" x="25%" y="25%" width="50%" height="50%"/>
      <widget>
	<clock/>
      </widget>
    </window>
  </windows>

</eww>


